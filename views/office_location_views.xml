<odoo>
    <record id="view_office_location_form" model="ir.ui.view">
        <field name="name">office.location.form</field>
        <field name="model">office.location</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Office Location">
                <group>
					<separator string="Location Name"/>
                    <field name="name"/>
                    <group string="Geometry (WKT â†’ the_geom2)">
                        <field name="geom_srid"/>
                        <field name="geom_wkt" placeholder="POLYGON((lon lat, lon lat, ...))" nolabel="1" colspan="4"/>
<button name="action_apply_geometry" type="object" string="Apply Geometry" class="btn-primary" invisible="1"/>
                        <field name="geom_valid" readonly="1" invisible="1"/>
                        <field name="area_m2" readonly="1"  invisible="1"/>
                        <field name="centroid_lat" readonly="1"  invisible="1"/>
                        <field name="centroid_lon" readonly="1"  invisible="1"/>
                    </group>
</group>
            </form>
        </field>
    </record>

    <record id="view_office_location_list" model="ir.ui.view">
        <field name="name">office.location.list</field>
        <field name="model">office.location</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
</list>
        </field>
    </record>

    <record id="action_office_location" model="ir.actions.act_window">
        <field name="name">Office Locations</field>
        <field name="res_model">office.location</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_office_location_root" name="Office Locations" parent="hr_attendance.menu_hr_attendance_root"/>
    <menuitem id="menu_office_location" name="Manage Locations" parent="menu_office_location_root" action="action_office_location"/>

</odoo>
